public class Pattern {
	public static void main(String[] args){
		int i,j;
		for(i=1;i<8;i++)
		{
			for(j=1;j<=i;j++)
			{
				System.out.print(j+" ");
			}
			System.out.println("\n");
		}
		for(i=7;i>=2;i--)
		{
			for(j=1;j<i;j++)
			{
				System.out.print(j+" ");
			}
		System.out.println("\n");
		}
	}

}
